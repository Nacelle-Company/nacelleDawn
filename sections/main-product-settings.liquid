      "id": "product_bk_img_size",
      "label": "Background image size",
      "options": [
        {
          "value": "auto",
          "label": "Auto"
        },
        {
          "value": "contain",
          "label": "Contain"
        },
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "100% auto",
          "label": "Full width"
        },
        {
          "value": "unset",
          "label": "Unset"
        }
      ],
      "default": "auto"
    },
    {
      "type": "select",
      "id": "product_bk_img_repeat",
      "label": "Background image repeat",
      "options": [
        {
          "value": "unset",
          "label": "Unset"
        },
        {
          "value": "no-repeat",
          "label": "No repeat"
        },
        {
          "value": "repeat",
          "label": "Repeat"
        },
        {
          "value": "repeat-x",
          "label": "Repeat horizontally"
        },
        {
          "value": "repeat-y",
          "label": "Repeat vertically"
        }
