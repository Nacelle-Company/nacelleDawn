      "content": "Typography"
    },
    {
      "type": "color",
      "id": "product_text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "product_nav_text_color",
      "label": "Nav text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#5899e1"
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "checkbox",
      "id": "nav_logo_white",
      "label": "Top nav logo white",
      "default": false
    },
    {
      "type": "header",
      "content": "product background"
    },
    {
      "type": "color",
      "id": "product_bk_color",
      "label": "Background color",
      "default": "transparent"
    },
