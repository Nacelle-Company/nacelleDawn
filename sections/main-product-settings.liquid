      "default": "unset"
    },
    {
      "type": "select",
      "id": "product_bk_img_attachment",
      "label": "Background image attachment",
      "options": [
        {
          "value": "scroll",
          "label": "Scroll"
        },
        {
          "value": "fixed",
          "label": "Fixed"
        }
      ],
      "default": "fixed"
    }
  ]
}
